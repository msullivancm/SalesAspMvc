@using SalesWebMvc.Models;

@model Cep
@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron">
    <h1>Web Services .NET Core</h1>
    <p class="lead">Consultando CEP nos correios</p>
</div>
<div class="row">
    <div class="col-md-3">
        @using (Html.BeginForm("Index", "Endereco", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                <div class="input-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <input type="submit" value="Buscar" class="btn btn-default" />
                    </span>
                </div>
            </div>
            <br />
            <div>
                @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger" })
            </div>
        }
        @{
            if (ViewBag.Endereco != null)
            {
                <p> Logradouro: @ViewBag.Endereco.Descricao @ViewBag.Endereco.Complemento </p>
                <p> Bairo: @ViewBag.Endereco.Bairro</p>
                <p> Cidade: @ViewBag.Endereco.Cidade</p>
                <p> Estado: @ViewBag.Endereco.UF</p>
            }
        }
    </div>
</div>
